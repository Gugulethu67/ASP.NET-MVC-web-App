@model IEnumerable<Expense_Tracker.Models.Division>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    
</div>
<div class="row">
    <div class="col-md-7">
        <ejs-grid id="divisions" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Division" field="Name"></e-grid-column>
                <e-grid-column headerText="Type" Template="#type" width="150px"></e-grid-column>
                <e-grid-column headerText="Actions" Template="#Icon" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <div class="col-md-5">
        <a class="btn-light btn-sm blue-button" asp-action="Create">+ New Division</a>
    </div>
</div>


<script id="type" type="text/x-template">
    ${if(Type=="Income")}
        <span class="badge bg-success">${Type}</span>
    ${else}
        <span class="badge bg-danger">${Type}</span>
    ${/if}
</script>

<script id="Icon" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/Divisions/Create/${DivisionId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/Divisions/Delete/${DivisionId}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>




